// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  email     String   @unique
  password  String?
  firstName String
  lastName  String
  channels  Channel[] // Many to many relationship
  messages Message[] // One to many relationship

}

model Channel {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String   @unique
  channelOwner Int
  users     User[] // Many to many relationship
  messages  Message[] // One to many relationship
}

model Message {
  id       Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  message  String
  channelId Int
  channel   Channel @relation(fields: [channelId], references: [id]) // One to many relationship
  userId    Int
  user      User @relation(fields: [userId], references: [id])  // One to many relationship
}


